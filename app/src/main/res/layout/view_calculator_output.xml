<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:orientation="vertical"
    tools:gravity="center_vertical"
    tools:parentTag="android.widget.LinearLayout">

    <TextView
        android:id="@+id/calculator_input_equation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:maxLines="3"
        android:padding="16dp"
        android:text="7*7"
        android:textColor="@color/colorText"
        android:textSize="@dimen/textSizeCalculationEquation"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/calculator_input_outcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calculator_input_outcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="16dp"
        android:text="49"
        android:textColor="@color/colorTextLight"
        android:textSize="@dimen/textSizeCalculationOutcome"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculator_input_equation" />


</merge>