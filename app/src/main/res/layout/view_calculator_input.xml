<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTitleBackground"
        />
    <ImageView
        android:id="@+id/input_element_image"
        android:layout_width="@dimen/sizeIcon"
        android:layout_height="@dimen/sizeIcon"
        android:layout_centerInParent="true"
        android:tint="@color/colorImage"
        tools:ignore="ContentDescription"
        android:src="@drawable/ic_trash" />

    <TextView
        android:id="@+id/input_element_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSizeCalculationEquation"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:text="1" />

    <View
        android:id="@+id/input_element_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"/>

</merge>